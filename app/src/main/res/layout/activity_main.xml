<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_mobile"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="0dp"
        android:contentDescription="@string/title"
        app:srcCompat="@drawable/dnd"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/character_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-25dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:alpha=".8"
        android:background="@drawable/button_border"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/characters_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textColor="#FFBF00"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sources_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:alpha=".8"
        android:background="@drawable/button_border"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/sources_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textColor="#FFBF00"
        android:textSize="30sp" />

    <Button
        android:id="@+id/party_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:alpha=".8"
        android:background="@drawable/button_border"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/party_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textColor="#FFBF00"
        android:textSize="30sp" />

    <Button
        android:id="@+id/maps_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:alpha=".8"
        android:background="@drawable/button_border"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/maps_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textColor="#FFBF00"
        android:textSize="30sp" />

    <Button
        android:id="@+id/monsters_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:alpha=".8"
        android:background="@drawable/button_border"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/monsters_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textColor="#FFBF00"
        android:textSize="30sp" />

</LinearLayout>